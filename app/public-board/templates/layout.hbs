<div class="account-page is-public is-loading">
  <div class="header clearfix">
    <div class="current-account pull-left"></div>
    <div class="user-dropdown-wrapper pull-right"></div>
  </div> {{! .header }}

  <div class="account-page-content-wrapper is-loading is-full-width">
    <div class="account-page-content is-loading">
      <div class="cards-empty empty-container">
        <h1 class="lead">This board is empty <br> <small class="edit-control">Start by creating a few cards</small></h1>
        <p class="text-muted edit-control">Drop files here</p>
        <div class="form-inline edit-control">
          <button type="button" data-action="createFirstFile" class="btn btn-default">Choose Files</button>
          <label>or</label>
          <button type="button" data-action="createFirstNote" class="btn btn-default">Create Note</button>
        </div> {{! .form-inline }}
      </div> {{! .empty-cards }}

      <div class="account-page-header"></div>
      <div class="cards-list-container account-page-content-section"></div>

      <div class="card-detail-container account-page-content-section row">
        <div class="card-detail-left col-md-8"></div>
        <div class="card-detail-right col-md-4">
          <div class="card-detail-info-container"></div>
          <div class="card-detail-comments"></div>
        </div> {{! .card-detail-right }}
      </div> {{! .card-detail-container }}
    </div> {{! .account-page-content }}
  </div> {{! .account-page-content-wrapper }}

  <div class="settings"></div>
</div> {{! .account-page }}
