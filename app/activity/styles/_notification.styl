.notification {
  border-bottom: 1px solid #EEEEEE;
  padding: 15px 0;

  a {
    &, &:hover {
      color: #51BEF9;
    }
  }

  .user-avatar {
    margin-top: 15px;
    margin-right: 10px;
    vertical-align: top;
  }

  .card {
    display: inline-block;
    float: none;
    height: 100px;
    margin: 15px 0 0;
    width: 100px;

    &:hover {
      .card-content {
        color: #555;
      }
    }

    &[data-type="file"] {
      background: url('../images/loading.gif') no-repeat center 40% #FFFFFF;
      background-size: 16px;
    }

    .card-name {
      font-size: 11px;
    }

    .card-content,
    .card-name-wrapper {
      height: auto;
      padding: 5px;
    }

    .card-content,
    .card-content p {
      color: #555;
      font-size: 12px
    }

    .card-preview {
      height: 72px !important;
    }

    .card-preview-extension {
      font-size: 24px;
      padding: 24px;
    }
  }
}

.notification-time {
  color: #CACACA;
}

.notification-text {
  margin: 0;
}
