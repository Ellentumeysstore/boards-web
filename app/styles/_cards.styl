.cards {
  &.is-creating-card {
    .cards-list { display: none; }
    .create-card { display: block; }
    .file-uploader-wrapper { display: none; }
  }

  &.is-creating-file {
    .cards-list { display: none; }
    .create-card { display: none; }
    .file-uploader-wrapper { display: block; }
  }
}

.cards-list {
  column-count: 4;
  column-gap: 10px;
  column-width: 250px;
  list-style-type: none;
  margin: 0;
  padding: 10px;
}

.create-card {
  display: none;
  padding: 10px;
}

.file-uploader-wrapper {
  display: none;
}
