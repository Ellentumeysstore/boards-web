.card {
  &.is-editing {
    .card-preview { display: none; }
    .card-edit-form { display: block; }

    &:hover {
      .card-actions-hover { display: none !important; }
    }
  }

  &.can-edit {
    &:hover {
      .card-actions-hover { display: inline-block; }
    }

    .card-actions-visible { display: inline-block; }
  }

  &.is-item {
    background: #fff;
    border: 1px solid #E6E5E5;
    border-radius: 3px;
    cursor: pointer;
    float: left;
    height: 200px;
    margin-bottom: 15px;
    padding: 10px;
    overflow: hidden;
    width: 220px;
  }

  &.is-detail {
    margin-bottom: 15px;

    .card-name {
      margin: 0 0 10px;
      word-break: break-all;
    }
  }

  &.is-item[data-type="note"] {
    .card-name { font-size: 14px; }
    .card-content { font-size: 12px; }
  }

  &.is-item[data-type="file"] {
    padding: 0;
    position: relative;

    .card-name {
      background: #FFF;
      border-top: 1px solid #E6E5E5;
      bottom: 0;
      display: block;
      text-align: center;
      padding: 10px;
      position: absolute;
      width: 100%;
    }

    .card-file-preview {
      background-repeat: no-repeat no-repeat;
      background-position: 50% 50%;
      height: 200px;
      left: 0;
      position: absolute;
      top: 0;
      width: 220px;
    }
  }

  &.is-detail[data-type="note"] {
    .card-content {
      border: 1px solid #E6E5E5;
      border-radius: 3px;
      padding: 10px;
    }
  }
}

.card-file-preview {
  display block;
  margin: 0 auto;
}

.card-edit-form {
  display: none;

  [name="content"] {
    height: 200px;
  }
}

.card-actions {
  float: right;
}
