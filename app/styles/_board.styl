.board {
  padding: 10px;

  &.is-editing {
    .board-preview { display: none; }
    .board-edit-form { display: block; }

    &:hover {
      .board-actions-hover { display: none !important; }
    }
  }

  &.can-edit {
    &:hover {
      .board-actions-hover { display: inline-block; }
    }
  }

  &.is-selected { background: #efefef; }

  &.is-item { cursor: pointer; }

  &.is-detail {
    .board-preview,
    .board-edit-form {
      float: left;
      margin-right: 10px
    }
  }
}

.board-preview { display: inline-block; }

.board-image {
  border-radius: 30px;
  display: inline-block;
  margin-right: 5px;
  vertical-align: middle;
}

.board-name {
  display: inline-block;
  font-size: 12px;
  margin: 0;
  vertical-align: middle;
}

.board-edit-form { display: none; }

.board-actions-hover {
  display: none;
  float: left;
}

.board-actions {
  float: right;
}
