{{#if hasDisqusShortname}}
  <div id="disqus_thread"></div>
  <script type="text/javascript">
    (function() {
      var dsq = document.createElement('script'); dsq.type = 'text/javascript'; dsq.async = true;
      dsq.src = "{{disqusUrl}}";
      (document.getElementsByTagName('head')[0] || document.getElementsByTagName('body')[0]).appendChild(dsq);
    })();
  </script>
{{else}}
  <p class="text-muted text-center">This account has no disqus shortname defined.</p>
  <p class="text-center"><button type="button" class="btn btn-default" data-action="openAccountSettings">Add disqus shortname</button></p>
{{/if}}
