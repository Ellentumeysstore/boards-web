<form class="edit-collaborator-form">
  {{#unless isOwner}}
    <button type="button" class="close pull-right" data-action="removeCollaborator">&times;</button>
  {{/unless}}

  {{#if isOwner}}
    <div class="collaborator-permissions pull-right">Is owner</div>
  {{else}}
    <div class="collaborator-permissions dropdown pull-right" data-permission="{{permission}}">
      <a class="dropdown-toggle" data-toggle="dropdown" href="#">
        Can {{#is permission "read"}}view{{else}}edit{{/is}} <b class="caret"></b>
      </a> {{! [data-toggle="dropdown"] }}
      <ol class="collaborator-permissions-list dropdown-menu" role="menu">
        <li><button type="button" data-permission="read" class="btn btn-link">Can view</button></li>
        <li><button type="button" data-permission="write" class="btn btn-link">Can edit</button></li>
      </ol> {{! .collaborator-permissions-list }}
    </div> {{! .collaborator-permissions }}
  {{/if}}

  <img src="{{avatar}}" class="collaborator-avatar">

  <span class="collaborator-name">
    {{name}} <small class="collaborator-username text-muted">{{username}}</small>
  </span> {{! .collaborator-name }}
</form> {{! .edit-collaborator-form }}
