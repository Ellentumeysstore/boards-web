<div id="account-page" class="is-loading">
  {{partial "core/templates/header"}}
  {{partial "core/templates/header" this}}

  <div id="account-page-content-wrapper" class="is-loading">
    <div id="boards-empty">
      <h1 class="lead">You donâ€™t have any boards <br> <small>Start by creating a board</small></h1>
      <button type="button" data-action="createFirstBoard" class="btn btn-default">Create Board</button>
    </div> {{! #boards-empty }}

    <div id="account-page-sidebar">
      <div id="create-board-container"></div>
      <div id="boards-list-container"></div>
    </div> {{! #account-page-sidebar }}

    <div id="account-page-content" class="is-loading">
      <div id="cards-empty">
        <h1 class="lead">This board is empty <br> <small class="edit-control">Start by creating a few cards</small></h1>
        <p class="text-muted edit-control">Drop files here</p>
        <div class="form-inline edit-control">
          <button type="button" data-action="createFirstFile" class="btn btn-default">Choose Files</button>
          <label>or</label>
          <button type="button" data-action="createFirstNote" class="btn btn-default">Create Note</button>
        </div> {{! .form-inline }}
      </div> {{! #empty-cards }}

      <div id="account-page-header"></div>
      <div id="cards-list-container"></div>

      <div id="card-detail-container" class="row">
        <div id="card-detail-left" class="col-md-8"></div>
        <div id="card-detail-right" class="col-md-4">
          <div id="card-detail-info-container"></div>
          <div id="card-detail-comments"></div>
        </div> {{! .card-detail-right }}
      </div> {{! #card-detail-container }}
    </div> {{! #account-page-content }}

    {{partial "account/templates/create-note-modal"}}
    <div id="file-uploader"></div>
  </div> {{! #account-page-content-wrapper }}

  <div id="settings"></div>
  <div id="share-board"></div>
</div> {{! #account-page }}
