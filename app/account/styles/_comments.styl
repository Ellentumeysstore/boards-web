#public-comments-wrapper {
  display: none;
}

.comments-toggler {
  display: block;
  margin-bottom: 15px;

  .dropdown-toggle {
    padding-left: 0;
    padding-right: 0;
  }
}

#collaborator-comments {
  min-height: 150px;

  &.is-loading {
    background: url('../images/loading-content.gif') no-repeat center center;

    .comments-list {
      display: none !important;
    }
  }
}
