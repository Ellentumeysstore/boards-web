$cardWidth = 222px;
$cardHeight = 222px;
$cardGutter = 15px;

.card {
  background-color: #FFFFFF;
  box-shadow: 0 2px 3px rgba(0, 0, 0, 0.1);
  cursor: pointer;
  float: left;
  height: $cardHeight;
  margin: 0 $cardGutter $cardGutter 0;
  position: relative;
  overflow: hidden;
  width: $cardWidth;

  &:hover {
    .card-actions {
      display: block;
    }
  }

  &.is-featured {
    height: ($cardHeight * 2) + $cardGutter;
    width: ($cardWidth * 2) + $cardGutter;
  }

  &.is-detail {
    height: auto;
    margin: 0;
    width: 100%;
  }

  &[data-type="note"] {
    background: #FFFFFF;
  }
}

.card-content {
  padding: 10px;
}

.card-name-wrapper {
  background #FFF;
  border-top: 1px solid #E0E0E0;
  bottom: 0;
  height: 15%;
  left: 0;
  padding: 4% 10px;
  position: absolute;
  width: 100%
  z-index: 5;
}

.card-name {
  color: #9B9A9B;
  display: block;
  font-size: 12px;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}

.card-actions {
  background: #FFF;
  display: none;
  right: 10px;
  padding: 5px;
  position: absolute;
  top: 10px;
  z-index: 15;
}
