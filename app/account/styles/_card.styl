$cardWidth = 222px;
$cardHeight = 222px;
$cardGutter = 15px;

.card {
  background-color: #F9F9F9;
  border: 1px solid #E0E0E0;
  border-radius: 3px;
  cursor: pointer;
  float: left;
  height: $cardHeight;
  margin: 0 $cardGutter $cardGutter 0;
  position: relative;
  overflow: hidden;
  width: $cardWidth;

  &:hover {
    .card-actions {
      display: block;
    }
  }

  &.is-featured {
    height: ($cardHeight * 2) + $cardGutter;
    width: ($cardWidth * 2) + $cardGutter;

    .card-preview {
      background-size: 100% auto;
    }
  }

  &.is-uploading {
    border: 4px dashed #E0E0E0;

    .card-upload-progress {
      display: block;
    }
  }

  &.is-detail {
    height: auto;
    margin: 0;
    width: 100%;

    .card-preview {
      height: auto;
      position: relative;
      width: 100%;
    }
  }

  &[data-type="note"] {
    background: #FFFFFF;
  }

  &[data-type="file"] {
    background: url('../images/loading-item.gif') no-repeat center 48% #FFFFFF;

    &.has-loaded-preview {
      background: #F9F9F9;

      .card-preview {
        display: block;
      }
    }
  }
}

.card-content {
  padding: 10px;
}

.card-upload-progress {
  background: #F9F9F9;
  border: 4px solid transparent;
  border-radius: 50%;
  color: #9B9A9B;
  display: none;
  height: 55px;
  left: 50%;
  margin: -35px 0 0 -27.5px;
  position: absolute;
  text-align: center;
  top: 50%;
  width: 55px;
  z-index: 10;

  & > svg {
    left: -4px;
    position: absolute;
    top: -4px;
    z-index: 1;
  }
}

.card-preview {
  background-repeat: no-repeat;
  background-position: 50% 48%;
  border-radius: 3px;
  display: none;
  height: 100%;
  left: 0;
  position: absolute;
  top: 0;
  width: 100%;
  z-index: 1;

  &.is-data-url {
    background-size: 100% auto;
  }
}

.card-preview-loader {
  display: none;
}

.card-name-wrapper {
  background #FFF;
  border-top: 1px solid #E0E0E0;
  border-radius: 0 0 2px 2px;
  bottom: 0;
  left: 0;
  padding: 10px;
  position: absolute;
  width: 100%
  z-index: 5;
}

.card-name {
  color: #9B9A9B;
  display: block;
  font-size: 12px;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}

.card-actions {
  background: #FFF;
  border-radius: 3px;
  display: none;
  right: 10px;
  padding: 5px;
  position: absolute;
  top: 10px;
  z-index: 15;
}
