.file-uploader-dropzone {
  background: #F9F9F9;
  border: 4px dashed #CECECE;
  border-radius: 4px;
  display: none;
  height: 98%;
  left: 0;
  margin: 0.5%;
  position: absolute;
  pointer-events: none;
  top: 0;
  width: 98.99%;
  z-index: 500;
}

.file-uploader-dropzone-text {
  color: #C1C1C1;
  font-size: 42px;
  margin: 0;
  padding: 20%;
  position: absolute;
  text-align: center;
  width: 100%;
}

.file-uploader-form {
  display: none;
}
