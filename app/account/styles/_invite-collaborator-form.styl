.invite-collaborators-form {
  background: #F0F0F0;
  border-radius: 3px;
  padding: 15px;

  [data-action="addInvitationRow"] {
    padding: 5px 0 0 0;
  }
}

.invite-collaborator-title {
  display: block;
  margin-bottom: 15px;
}

.invite-collaborator-rows {
  margin-bottom: -15px;
}

.invite-collaborator-row {
  margin-bottom: 15px;
  position: relative;

  &:first-child {
    [data-action="removeCollaborator"] {
      display: none;
    }
  }

  [name="invitee"] {
    width: 400px;
  }

  .collaborator-permissions {
    padding: 0;
  }
}

.invite-collaborator-actions {
  margin-top: 15px;
}
