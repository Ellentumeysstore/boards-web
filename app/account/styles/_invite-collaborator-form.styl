.invite-collaborators-form {
  background: #FDFDFD;
  border-radius: 3px;
  border: 1px solid #EDEDED;
  padding: 15px;

  [name="invitee"] {
    width: 380px;

    &.is-loading {
      background: url('../images/loading.gif') no-repeat 97% center #FFFFFF;
      background-size: 22px;
    }
  }
}

.invite-collaborator-title {
  display: block;
  margin-bottom: 15px;
}

.invite-collaborator-actions {
  position: relative;

  .collaborator-permissions {
    padding: 0;
  }
}
