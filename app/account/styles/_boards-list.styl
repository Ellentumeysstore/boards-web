.boards-list {
  background: linear-gradient(white 30%, rgba(255,255,255,0)), linear-gradient(rgba(255,255,255,0), white 70%) 0 100%, radial-gradient(30% -15px, farthest-side, rgba(0,0,0,.05), rgba(0,0,0,0)), radial-gradient(50% 100%,farthest-side, rgba(0,0,0,.05), rgba(0,0,0,0)) 0 100%;
  background: linear-gradient(white 30%, rgba(255,255,255,0)), linear-gradient(rgba(255,255,255,0), white 70%) 0 100%, radial-gradient(farthest-side at 30% -15px, rgba(0,0,0,.05), rgba(0,0,0,0)), radial-gradient(farthest-side at 50% 100%, rgba(0,0,0,.05), rgba(0,0,0,0)) 0 100%;
  background-repeat: no-repeat;
  background-color: white;
  background-size: 100% 40px, 100% 40px, 100% 14px, 100% 14px;
  background-attachment: local, local, scroll, scroll;
  margin: 0;
  overflow-y: auto;
}
