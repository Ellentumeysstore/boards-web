.card[data-type="file"] {
  background: url('../images/loading.gif') no-repeat center 48% #FFFFFF;
  background-size: 32px;

  &.is-uploading {
    border: 4px dashed #E0E0E0;

    .card-preview-extension {
      display: none;
    }

    .card-upload-progress {
      display: block;
    }
  }

  &.has-loaded-preview {
    background: #F9F9F9;

    .card-preview {
      display: block;
    }
  }

  &.is-item {
    &.is-featured {
      height: ($cardHeight * 2) + $cardGutter;
      width: ($cardWidth * 2) + $cardGutter;

      .card-preview {
        background-size: 100% auto;
      }

      .card-preview-extension {
        padding-top: 168px;
      }
    }
  }

  &.is-detail {
    background: url('../images/loading.gif') no-repeat center center #FFFFFF;
    background-size: 32px;
    min-height: 150px;
    text-align: center;

    &.has-loaded-preview {
      background: #F9F9F9;
      height: 200px;

      &.has-preview {
        height: auto;
        min-height: inherit;
      }

      img.card-preview {
        display: inline;
      }
    }

    img.card-preview {
      display: none;
      height: auto;
      max-width: 100%;
      position: relative;
      width: auto;
    }

    .card-preview {
      background-size: auto auto !important;
    }
  }
}

.card-upload-progress {
  background: #F9F9F9;
  border: 4px solid transparent;
  border-radius: 50%;
  color: #9B9A9B;
  display: none;
  height: 55px;
  left: 50%;
  margin: -35px 0 0 -27.5px;
  position: absolute;
  text-align: center;
  top: 50%;
  width: 55px;
  z-index: 10;

  & > svg {
    left: -4px;
    position: absolute;
    top: -4px;
    z-index: 1;
  }
}

.card-preview {
  background-repeat: no-repeat;
  background-position: 50% 48%;
  border-radius: 3px;
  display: none;
  height: 100%;
  left: 0;
  position: absolute;
  top: 0;
  width: 100%;
  z-index: 1;

  &[data-pattern] {
    background-size: 50% 50% !important;
    background-repeat: repeat;
  }

  &[data-pattern="1"] {
    background-image: url('../images/patterns/1.png');
  }

  &[data-pattern="2"] {
    background-image: url('../images/patterns/2.png');
  }

  &[data-pattern="3"] {
    background-image: url('../images/patterns/3.png');
  }

  &[data-pattern="4"] {
    background-image: url('../images/patterns/4.png');
  }

  &[data-pattern="5"] {
    background-image: url('../images/patterns/5.png');
  }

  &[data-pattern="6"] {
    background-image: url('../images/patterns/6.png');
  }

  &[data-pattern="7"] {
    background-image: url('../images/patterns/7.png');
  }

  &[data-pattern="8"] {
    background-image: url('../images/patterns/8.png');
  }
}

.card-preview-loader {
  display: none;
}

.card-preview-extension {
  color: #FFFFFF;
  font-family: HelveticaNeue-UltraLight;
  font-size: 60px;
  text-align: center;
  padding-top: 55px;
  position: relative;
  z-index: 10;
}
