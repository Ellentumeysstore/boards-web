.card-detail-info {
  cursor: pointer;
  margin-bottom: 20px;

  &.is-editing {
    .card-detail-info {
      display: none;
    }

    .card-detail-edit {
      display: block;
    }
  }
}

.card-detail-info-name {
  font-size: 22px;
  margin: 0;
  transition: color 0.1s linear;

  &:hover {
    color: #777;
  }
}

.card-detail-edit {
  display: none;
}
