.board {
  position: relative;

  &:hover {
    [data-action="delete"] {
      display: block;
    }
  }

  &.is-selected {
    .board-link {
      color: #50BEF7;
    }

    .board-name {
      display: inline-block;
      font-weight: bold;
    }
  }

  &.is-being-created {
    background: url('../images/loading.gif') no-repeat right center;
    background-size: 22px;

    .board-link {
      cursor: default;
    }

    .board-name {
      color: #CACACA;
    }

    .board-color {
      background-color: #E5E5E5 !important;
    }

    [data-action="delete"] {
      display: none !important;
    }
  }

  [data-action="delete"] {
    display: none;
    position: absolute;
    top: 15px;
    right: 0;
  }
}

.board-link {
  color: #9B9A9B;
  display: block;
  padding: 10px 0;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;

  &:hover {
    color: #50BEF7;
    text-decoration: none;
  }
}

.board-name,
.board-thumbnail-partial {
  vertical-align: middle;
}

.board-preview,
.board-thumbnail-partial {
  border-radius: 50%;
  display: inline-block;
  height: 32px;
  text-align: center;
  width: 32px;
}

.board-preview {
  background: #E5E5E5;
}

.board-thumbnail-partial {
  margin-right: 5px;
}

.board-name {
  font-size: 13px;
  font-weight: normal;
}
