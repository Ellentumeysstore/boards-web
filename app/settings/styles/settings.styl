.settings-modal {
  h3 {
    margin: 0 0 25px;
  }

  .modal-header,
  .modal-footer {
    boder: 0 none;
  }

  .form-group {
    padding-bottom: 5px;

    &:last-child,
    &:nth-last-child(2) {
      margin-bottom: 0;
      padding-bottom: 0;
    }

    .control-label {
      text-align: left;
    }
  }

  [data-error] {
    margin-bottom: 0;
  }
}

.settings-modal-actions,
.advanced-settings-modal-actions {
  border-top: 1px solid #efefef;
  margin-top:5px;
  padding-top: 20px;
}

.settings-modal-actions {
  display: none;
}
