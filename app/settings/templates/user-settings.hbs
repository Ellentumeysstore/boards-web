<div class="form-group">
  <label for="userSettingsEmail" class="col-sm-3 control-label">Email</label>
  <div class="col-sm-9">
    <input name="email" type="text" class="form-control" id="userSettingsEmail" value="{{email}}" placeholder="e.g. name@example.com">
    <div data-error="email" class="help-block"></div>
  </div> {{! .col-sm-9 }}
</div> {{! .form-group }}

<div class="form-group">
  <label for="userSettingsUsername" class="col-sm-3 control-label">Username</label>
  <div class="col-sm-9">
    <input name="username" type="text" class="form-control" id="userSettingsUsername" value="{{username}}" placeholder="e.g. user123">
    <div data-error="username" class="help-block"></div>
  </div> {{! .col-sm-9 }}
</div> {{! .form-group }}

<div class="form-group">
  <label for="userSettingsFirstName" class="col-sm-3 control-label">First Name</label>
  <div class="col-sm-9">
    <input name="first_name" type="text" class="form-control" id="userSettingsFirstName" value="{{first_name}}" placeholder="e.g. Name">
    <div data-error="first_name" class="help-block"></div>
  </div> {{! .col-sm-9 }}
</div> {{! .form-group }}

<div class="form-group">
  <label for="userSettingsLastName" class="col-sm-3 control-label">Last Name</label>
  <div class="col-sm-9">
    <input name="last_name" type="text" class="form-control" id="userSettingsLastName" value="{{last_name}}" placeholder="e.g. LastName">
    <div data-error="last_name" class="help-block"></div>
  </div> {{! .col-sm-9 }}
</div> {{! .form-group }}

<div class="form-group">
  <label for="userSettingsDisqus" class="col-sm-3 control-label">Disqus shortname</label>
  <div class="col-sm-9">
    <input name="disqus_shortname" type="text" class="form-control" id="userSettingsDisqus" value="{{disqus_shortname}}" placeholder="e.g. mydisqusshortname">
    <small class="help-block">This will enable public comments on shared boards, you can open a free account on the <a href="http://disqus.com/" target="_blank">disqus site.</a></small>
    <div data-error="disqus_shortname" class="help-block"></div>
  </div> {{! .col-sm-9 }}
</div> {{! .form-group }}

<div class="form-group">
  <div class="col-sm-12">
    <button class="btn btn-default" data-action="save">Save</button>
    <button type="button" class="btn btn-link btn-cancel" data-action="cancel">Cancel</button>
  </div> {{! .col-sm-12 }}
</div> {{! .form-group }}
