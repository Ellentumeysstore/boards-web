<div class="form-group">
  <label for="userSettingsEmail" class="col-sm-3 control-label">Email</label>
  <div class="col-sm-9">
    <input type="text" class="form-control" id="userSettingsEmail" value="{{email}}" placeholder="e.g. name@example.com">
  </div> {{! .col-sm-9 }}
</div> {{! .form-group }}

<div class="form-group">
  <label for="userSettingsUsername" class="col-sm-3 control-label">Username</label>
  <div class="col-sm-9">
    <input type="text" class="form-control" id="userSettingsUsername" value="{{username}}" placeholder="e.g. user123">
  </div> {{! .col-sm-9 }}
</div> {{! .form-group }}

<div class="form-group">
  <label for="userSettingsFirstName" class="col-sm-3 control-label">First Name</label>
  <div class="col-sm-9">
    <input type="text" class="form-control" id="userSettingsFirstName" value="{{first_name}}" placeholder="e.g. Name">
  </div> {{! .col-sm-9 }}
</div> {{! .form-group }}

<div class="form-group">
  <label for="userSettingsLastName" class="col-sm-3 control-label">Last Name</label>
  <div class="col-sm-9">
    <input type="text" class="form-control" id="userSettingsLastName" value="{{last_name}}" placeholder="e.g. LastName">
  </div> {{! .col-sm-9 }}
</div> {{! .form-group }}

<div class="form-group">
  <div class="col-sm-12">
    <button class="btn btn-default" data-action="save">Save</button>
    <button type="button" class="btn btn-link" data-action="cancel">Cancel</button>
  </div> {{! .col-sm-12 }}
</div> {{! .form-group }}
