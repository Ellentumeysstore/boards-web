.markdown {
  :first-child {
    margin-top: 0;
  }

  a {
    color: #50BEF7;

    &:hover,
    &:focus,
    &:active {
      color: #3EB6FF;
      text-decoration: underline;
    }
  }

  blockquote {
    border-left: 2px solid #E0E0E0;
  }

  img {
    height: auto;
    max-width: 100%;
    width: auto;
  }

  & > ul {
    list-style-type: disc;

    & > li > ul {
      list-style-type: circle;
    }
  }

  .faux-link {
    color: #50BEF7;
  }

  .has-task {
    list-style: none;

    input[type="checkbox"] {
      cursor: pointer;
      margin-right: 10px;
      vertical-align: baseline;
    }
  }
}

.is-item .markdown {
  h1 {
    font-size: 28px;
  }

  h2 {
    font-size: 24px;
  }

  h3 {
    font-size: 20px;
  }

  .has-task input[type="checkbox"] {
    pointer-events: none;
  }
}
