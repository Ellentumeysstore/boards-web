input.error,
.textarea.error {
  border-color: #B5313A;
}

[data-error] {
  color: #B5313A;
}

.ui-no-events {
  pointer-events: none;
}

.ui-no-scroll {
  overflow: hidden;
}

.ui-avatar {
  background: url('../images/loading-item.gif') no-repeat center center #FFFFFF;
  border-radius: 50%;
  display: inline-block;
  height: 32px;
  margin-right: 5px;
  width: 32px;

  &.sm {
    height: 22px;
    width: 22px;
  }

  &.lg {
    height: 52px;
    width: 52px;
  }
}

.ui-modal-alert {
  background: #F5F5F5;
  border-radius: 0 0 3px 3px;
  display: none;
  left: 50%;
  margin-left: -142px;
  text-align: center;
  top: 0;
  padding: 10px;
  position: absolute;
  width: 285px;
  z-index: 1;
}

.ui-editable {
  background-color: transparent;
  border-radius: 3px;
  cursor: pointer;
  margin: 0 -6px;
  padding: 2px 8px;
  transition: backgroud-color 0.3s linear;

  &:hover {
    background-color: #F5F5F5;
  }
}

input.form-control,
textarea.form-control {
  border-color: #EFEFEF;
  box-shadow: none;
  placeholder(#CACAD0);

  &:focus {
    border-color: #CACAD0;
    box-shadow: none;
  }
}

a.btn,
button.btn {
  font-size: 12px;

  &.btn-default {
    background-color: #F2F2F2;
    border-color: transparent;
    color: #898989;
    font-weight: bold;

    &:hover,
    &:active
    &.active {
      background-color: #E5E5E5;
      box-shadow: none;
    }
  }

  &.btn-danger {
    border-color: transparent;
    font-weight: bold;

    &:hover,
    &:active,
    &.active {
      box-shadow: none;
    }
  }

  &.btn-link {
    color: #50BEF7;

    &:hover {
      color: #3EB6FF;
    }
  }

  &.btn-cancel {
    color: #4A494A;

    &:hover {
      color: #555555;
    }
  }
}

.ui-blue-link {
  color: #50BEF7;

  &:hover,
  &:focus,
  &:active,
  &.active {
    color: #3EB6FF;
    text-decoration: underline;
  }
}
